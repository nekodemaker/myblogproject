{% extends 'layout.html.twig' %}

{% block content %}
<form name="create-article-form" method="POST" enctype="multipart/form-data">
    Title: <input type="text" name="title-article"><br>
    Article text : <input type="text" name="text-article"><br>
    <label for="article-pic">Image de l'article (tous formats | max. 1 Mo) :</label><br />
    <input type="hidden" name="MAX_FILE_SIZE" value="1048576" />
    <input type="file" name="article-pic" id="article-pic" /><br />
    <input type="submit">
</form>
{% endblock %}